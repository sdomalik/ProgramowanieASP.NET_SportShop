@model IEnumerable<SportShop.Models.Manufacturer>


<div class="container text-center">
    <div class="row">
        @foreach (var m in Model)
        {
            <div class="col-12 col-lg-6 mb-2">
                <div class="card">
                    <div class="card-header font-weight-bold">@m.Name</div>
                    <div class="card-body">@m.Country</div>
                </div>
            </div>
        }
    </div>
</div>